<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.laurensius_dede_suhardiman.smartairport">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name=".appcontroller.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity
            android:name=".SmartAirport"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SplashScreen" />
        <activity
            android:name=".BookFlight"
            android:theme="@style/AppTheme"
            android:turnScreenOn="true" />
        <activity
            android:name=".FlightInfo"
            android:label="@string/title_activity_flight_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SmartTranslate"
            android:theme="@style/AppTheme"
            android:turnScreenOn="true" />
        <activity
            android:name=".AirportFacilities"
            android:label="@string/title_activity_airport_facilities"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PhoneDir"
            android:theme="@style/AppTheme"
            android:turnScreenOn="true" />
        <activity
            android:name=".RouteResult"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Parking"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".TourismAttraction"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DirectionMap"
            android:theme="@style/AppTheme" />
        <activity android:name=".EntertainmentArea"
            android:theme="@style/AppTheme" />
    </application>

</manifest>