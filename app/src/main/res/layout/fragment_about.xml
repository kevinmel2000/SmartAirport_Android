<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCD5E2"
    tools:context=".SmartAirport">

    <!--Linear layout master-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="#FFFFFF"
            android:src="@mipmap/atas"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/putih"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:orientation="vertical"
            android:minHeight="200dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="48dp"
                android:src="@mipmap/logo_bijb"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="8pt"
                android:textAlignment="center"
                android:text="VISION"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="7pt"
                android:textAlignment="center"
                android:layout_marginBottom="48dp"
                android:text="To become world class holding company, top 10 best airport and aerocity in its class,and be the engine of the economy in West Java throuhgh the development and construction of the cultural and values of West Java"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="8pt"
                android:textAlignment="center"
                android:text="MISION"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="7pt"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"
                android:text="1. Managing airport and its business area professionally, profitably, effectively, efficiently. \n2. Providing benefits for economic progress for the walfare people in West Java. \n3. Connecting world through airport in West Java, especially Kertajati Internationa Airport and Aerocity"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:background="#FFFFFF"
            android:layout_marginBottom="50dp"
            android:src="@mipmap/bawah"/>
    </LinearLayout>
    <!--End of Linear layout master-->

</ScrollView>